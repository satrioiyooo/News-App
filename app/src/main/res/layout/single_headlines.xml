<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardBackgroundColor="@color/backGroundAd"
    android:background="@color/backGroundAd"
    app:cardCornerRadius="20dp"
    app:cardElevation="0dp"
    android:layout_marginRight="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            app:cardElevation="0dp"
            app:cardCornerRadius="20dp"
            android:layout_height="250dp">
            <ImageView
                android:id="@+id/imageView_singleHeadline"
                android:layout_width="wrap_content"
                android:layout_height="250dp"
                android:scaleType="centerCrop"
                tools:srcCompat="@tools:sample/backgrounds/scenic" />
        </androidx.cardview.widget.CardView>


        <TextView
            android:id="@+id/title_singleHeadline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:maxLines="2"
            android:textColor="@color/mainText"
            android:fontFamily="@font/roboto_medium"
            android:layout_marginTop="10dp"
            android:textSize="18sp"
            />

        <LinearLayout
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <TextView
                android:id="@+id/author_singleHeadline"
                android:layout_width="wrap_content"
                android:text="@string/author"
                android:textColor="@color/textAd"
                android:textSize="16sp"
                android:gravity="center"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_height="match_parent"/>
            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                />

            <TextView
                android:id="@+id/date_singleHeadline"
                android:layout_width="wrap_content"
                android:text="@string/tanggal"
                android:textColor="@color/textAd"
                android:textSize="16sp"
                android:gravity="center"
                android:layout_gravity="end"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_height="match_parent"/>

        </LinearLayout>

    </LinearLayout>


</androidx.cardview.widget.CardView>